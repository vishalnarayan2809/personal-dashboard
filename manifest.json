{
    "manifest_version": 3,
    "name": "Personal Dashboard",
    "description": "A beautiful, fast, and feature-rich new tab dashboard with weather, backgrounds, and productivity tools",
    "version": "2.0.0",
    "version_name": "2.0.0 Production",
    "author": "Your Name",
    "homepage_url": "https://github.com/vishalnarayan2809/personal-dashboard",
    
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    
    "permissions": [
        "storage",
        "geolocation"
    ],
    
    "host_permissions": [
        "https://api.unsplash.com/*",
        "https://api.openweathermap.org/*",
        "https://api.adviceslip.com/*",
        "https://api.api-ninjas.com/*"
    ],
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https: blob:; connect-src 'self' https:; style-src 'self' 'unsafe-inline';"
    },
    
    "web_accessible_resources": [
        {
            "resources": ["assets/*", "*.png", "*.jpg", "*.gif"],
            "matches": ["<all_urls>"]
        }
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "Personal Dashboard Settings",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    
    "minimum_chrome_version": "88",
    
    "offline_enabled": true
}
